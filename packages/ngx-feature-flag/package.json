{
  "name": "ngx-feature-flag-app",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "clean": "npm run clean:lib && npm run clean:app",
    "clean:lib": "npm run rimraf -- projects/ngx-feature-flag/node_modules",
    "clean:app": "npm run rimraf -- node_modules dist src/assets/README.md",
    "build": "npm run build:lib && npm run build:app",
    "build:app": "ng build",
    "prebuild:app": "cp README.md src/assets/README.md",
    "rimraf": "rimraf",
    "test": "npm run test:lib",
    "test:app": "ng test --watch=false",
    "test:lib": "ng test ngx-feature-flag --watch=false --browsers ChromeHeadlessNoSandbox",
    "test:lib:dev": "ng test ngx-feature-flag",
    "lint": "ng lint",
    "lint:app:fix": "ng lint ngx-feature-flag-app --fix",
    "lint:lib:fix": "ng lint ngx-feature-flag --fix",
    "lint:fix": "npm run lint:app:fix && npm run lint:lib:fix",
    "e2e": "ng e2e",
    "install:lib": "cd projects/ngx-feature-flag && npm i",
    "prebuild:lib": "npm run install:lib && mkdir -p projects/ngx-feature-flag/node_modules/patternfly/dist/less/bootstrap/less && cp -rf projects/ngx-feature-flag/node_modules/bootstrap/less/* projects/ngx-feature-flag/node_modules/patternfly/dist/less/bootstrap/less && mkdir -p projects/ngx-feature-flag/node_modules/patternfly/dist/less/font-awesome/less && cp projects/ngx-feature-flag/node_modules/font-awesome/less/*.less projects/ngx-feature-flag/node_modules/patternfly/dist/less/font-awesome/less/",
    "build:lib": "ng build --prod ngx-feature-flag",
    "pack:lib": "cd dist/ngx-feature-flag && npm pack",
    "package": "npm run build:lib && npm run pack:lib",
    "semantic-release": "semantic-release pre && npm run build && cp -r .git dist/ngx-feature-flag && npm publish dist/ngx-feature-flag"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^6.1.0",
    "@angular/core": "^6.1.0",
    "@angular/compiler": "^6.1.0",
    "@angular/animations": "^6.1.0",
    "@angular/forms": "^6.1.0",
    "@angular/http": "^6.1.0",
    "@angular/platform-browser": "^6.1.0",
    "@angular/platform-browser-dynamic": "^6.1.0",
    "@angular/router": "^6.1.0",
    "core-js": "^2.5.4",
    "rxjs": "^6.0.0",
    "zone.js": "^0.8.26",
    "lodash": "^4.17.10",
    "patternfly": "^3.28.0",
    "patternfly-ng": "^4.0.1"
  },
  "devDependencies": {
    "@angular/compiler-cli": "^6.1.0",
    "@angular-devkit/build-ng-packagr": "~0.6.8",
    "@angular-devkit/build-angular": "~0.6.8",
    "ng-packagr": "^3.0.0-rc.2",
    "tsickle": ">=0.25.5",
    "tslib": "^1.7.1",
    "typescript": "~2.7.2",
    "@angular/cli": "~6.1.0",
    "@angular/language-service": "^6.1.0",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.2.1",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~1.7.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.0",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.3.0",
    "ts-node": "~5.0.1",
    "tslint": "~5.9.1",
    "ngx-base": "^3.1.1",
    "ngx-login-client": "^2.2.0",
    "markdown-it": "8.4.1",
    "highlight.js": "9.12.0",
    "rimraf": "2.6.2",
    "semantic-release": "8.2.0"
  }
}
